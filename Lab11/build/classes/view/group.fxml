<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="controller.GroupController" 
		xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" 
		>
           
	<Label text="Seat Group:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
	<Text text="${controller.group.name}" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
	<Label text="Capacity:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
	<Text text="${controller.group.capacity}" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
	<Label text="Price: ($)" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
	<Text text="${controller.group.price}" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
	<Label text="Sold:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
	<Text text="${controller.group.sold}" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
	<Label text="Left:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
	<Text text="${controller.group.left}" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
	<Label text="Income: ($)" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
	<Text text="${controller.group.income}" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
	<Label text="Sell" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
	<TextField fx:id="amountTf" text="0" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
	<HBox alignment="center_right" GridPane.columnIndex="1" GridPane.rowIndex="7">
		<Button fx:id="sellBtn" text="Sell" onAction="#handleSell"/>
	</HBox>

	<stylesheets>
		<URL value="@style.css"/>
	</stylesheets>
	
</GridPane>
